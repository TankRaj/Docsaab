<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_hospital"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="8dp"
    android:layout_marginBottom="16dp"
    android:background="#C5CAE9"
    android:foreground="?attr/selectableItemBackground"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >



        <ImageView
            android:id="@+id/ic_hospital"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:background="@color/h_deep_purple_200"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:id="@+id/hospital_name"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/ic_hospital"
            android:text="Hospital Name"
            android:textColor="#000000"
        android:background="@color/h_blue_600"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/hospital_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/hospital_name"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/ic_hospital"
            android:textColor="#000000"
            android:ellipsize="end"
            android:singleLine="true"
            android:background="@color/colorAccent"
            android:text="Hospital Description"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>